<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>NodeJs - Demo</title>
    <link rel="stylesheet" href="/css/basic.css">
</head>

<body>
    <!--The content below is only a placeholder and can be replaced.-->

    <link rel="stylesheet" href="/bootstrap/css/bootstrap.css">

    <%- include ../public/nav.ejs%>

    <div class="container-fluid">
        <div class="row">

            <%- include ../public/aside.ejs%>

            <div class="col-sm-10">
                <ol class="breadcrumb">
                    <li class="active">商品分类管理</li>
                    <li class="active">商品分类列表</li>
                </ol>
                <!-- 列表展示 -->
                <div class="table-responsive ">
                    <table class="table table-striped ">
                        <thead>
                            <tr>
                                <th>编号</th>
                                <th>分类名称</th>
                                <th>分类描述</th>
                                <th class="text-center">操作</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for(var i =0; i < list.length; i++){ %>
                            <tr>
                                <td><%= i+1%></td>
                                <td><%= list[i].sortname%></td>
                                <td><%= list[i].description%></td>
                                <td class="text-center">
                                    <a href="/admin/sort/edit?id=<%= list[i]._id%>" class="btn btn-success">修改</a>
                                    <a href="/admin/sort/del?id=<%= list[i]._id%>" class="btn btn-danger" onclick="del(this);">删除</a>
                                </td>
                            </tr>
                            <%}%>
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>

</body>

</html>
<script> function del(_this) { if (confirm("确定要删除吗？")) window.location.href = _this.getAttribute("href"); } </script>